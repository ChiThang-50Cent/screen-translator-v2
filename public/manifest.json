{
  "manifest_version": 3,
  "name": "Screen Translator",
  "version": "1.0.0",
  "description": "Screen translation extension",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "Screen Translator"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}